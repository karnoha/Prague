<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/list_layout_height"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/layout_image"
        android:layout_width="@dimen/list_layout_height"
        android:layout_height="@dimen/list_layout_height"
        android:scaleType="centerCrop"
        android:background="@color/android:white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_layout_height"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/layout_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_layout_height_1_3"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:layout_marginRight="8dp"

            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="name column" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/layout_desc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_layout_height_1_3"
                android:layout_marginRight="8dp"

                tools:text="description column description column description column description column " />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_layout_height_1_3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/layout_price"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_layout_height_1_3"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                tools:text="price" />

            <TextView
                android:id="@+id/layout_contact"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="2"
                android:textColor="@android:color/black"
                android:textSize="10sp"
                tools:text="contact" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>